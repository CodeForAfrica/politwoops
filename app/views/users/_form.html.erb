<%= form.label :login, t(:login_label, :scope => [:politwoops, :users]) %>:<br />
<%= form.text_field :login %><br />
<br />
<%= form.label :email, t(:email_label, :scope => [:politwoops, :users]) %>:<br />
<%= form.text_field :email %><br />
<br />
<% if current_user && current_user.is_admin == 1 %>
<div class="field">
  <%= form.label t(:model_name, :scope => [:politwoops, :groups]) %>:<br />
  <%= select(:user, :group_id, @groups.collect { |g| [g.name, g.id]}, {:include_blank => true}, :class => 'chzn-select' )%>
</div>  
<% end %>
<%= form.label :password, form.object.new_record? ? t(:password_label, :scope => [:politwoops, :users]) : t(:password_change_label, :scope => [:politwoops, :users]) %>:<br />
<%= form.password_field :password %><br />
<br />
<%= form.label :password_confirmation, t(:password_confirmation_label, :scope => [:politwoops, :users]) %>:<br />
<%= form.password_field :password_confirmation %><br />

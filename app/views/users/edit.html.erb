<h1><%=t :edit_heading, :scope => [:politwoops, :users] %></h1>

<% form_for @user, :url => user_path(@user) do |f| %>
  <%= f.error_messages %>
  <%= render :partial => "form", :object => f %>
  <%= f.submit t(:update, :scope => [:helpers, :submit], :model => t(:model_name, :scope => [:politwoops, :users])) %>
<% end %>
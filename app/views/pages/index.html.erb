<h1><%=t :index_heading, :scope => [:politwoops, :pages] %></h1>

<table>
  <tr>
    <th><%=t :title_label, :scope => [:politwoops, :pages] %></th>
    <th><%=t :slug_label, :scope => [:politwoops, :pages] %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @pages.each do |page| %>
  <tr>
    <td><%= page.title %></td>
    <td><%= page.slug %></td>
    <td><%= link_to t(:show, :scope => [:politwoops]), sprintf('/page/%s', page.slug) %></td>
    <td><%= link_to t(:edit, :scope => [:politwoops]), edit_page_path(page) %></td>
    <td><%= link_to t(:destroy, :scope => [:politwoops]), page, :confirm => t(:sure, :scope => [:politwoops]), :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />


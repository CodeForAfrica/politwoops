<!doctype html>
<html class="bb_wrapper">
<head>
  <title>Politwoops - <%= t :slogan, :scope => [:politwoops] %></title>

  <%= JavascriptExports %>

  <%= stylesheet_link_tag "admin" %>

  <%= javascript_include_tag "jquery-1.7.1.min" %>
  <%= javascript_include_tag "jquery.placehold-0.3.min" %>

  <%= csrf_meta_tag %>

  <%= content_for :feeds %>
</head>
<body<%if content_for?(:body_class) %> <%= yield(:body_class) %> <% end %>>
  <div class="branding-bar" data-bb-brandingbar="true"></div>
  <div class="container">
		<header>
			<nav>
				<ul>
					<li>
                    <a href="<%= url_for :all_politicians %>">Politicians</a>
					</li>
				</ul>
			</nav>
			<h1><a class="textReplace clear" href="/">Politwoops <small>Deleted Tweets from Politicians</small></a></h1>
			<form action="/" method="get" id="search">
				<input type="search" placeholder="Search" name="q" value="<%= h params[:q] %>"/>
				<button class="textReplace" id="searchBtn">search</button>
			</form>
			<div class="clear"></div>

		</header>
		<div id="ltColumn">
			<div class="module">

                <h2>Politwoops Admin</h2>
                <ul>
                <li><%= link_to "Front page", root_path %></li>
                <li><%= link_to "Review Twoops", admin_review_path %></li>
                <li><%= link_to "User Admin", admin_admin_list_path %></li>
                <li><%= link_to "Office Admin", admin_list_offices_path %></li>
                <li><%= link_to "System Status", admin_status_path %></li>
                <li><%= link_to "Annual Report", admin_annual_report_path %></li>
                </ul>
            </div>
        </div>

  <div id="rtColumn">
    <%= yield %>
  </div>

  <div class="clear"></div>
</div>
	<footer>
            <div class="container">
                <div class="span6 terms">
                </div>
            </div>
        </footer>

        <%= javascript_include_tag "jquery.tmpl.min.js" %>
        <%= javascript_include_tag "congressapi" %>
        <%= javascript_include_tag "opencivicdataapi" %>
        <%= javascript_include_tag "politwoops" %>
</body>
</html>

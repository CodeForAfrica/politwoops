<h1><%=t :index_heading, :scope => [:politwoops, :parties] %></h1>

<table>
  <tr>
    <th><%=t :name_label, :scope => [:politwoops, :parties] %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @parties.each do |party| %>
  <tr>
    <td><%= party.name %></td>
    <td><%= link_to t(:show, :scope => [:politwoops]), sprintf('/party/%s', party.name) %></td>
    <td><%= link_to t(:edit, :scope => [:politwoops]), edit_party_path(party) %></td>
    <td><%= link_to t(:destroy, :scope => [:politwoops]), party, :confirm => t(:sure, :scope => [:politwoops]), :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />


<%= form_for(@group) do |f| %>
  <% if @group.errors.any? %>
    <div id="error_explanation">
      <h2><%=t :errors_explanation, :scope => [:politwoops, :groups], :count => @group.errors.count %>
      <ul>
      <% @group.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label t(:name_label, :scope => [:politwoops, :groups]) %>:<br />
    <%= f.text_field :name %>
	<p class="explanation"><%=t :name_explanation, :scope => [:politwoops, :groups] %></p>
  </div>
  <div class="field">
    <%= f.label t(:description_label, :scope => [:politwoops, :groups]) %>:<br />
    <%= f.text_field :full_name %>
	<p class="explanation"><%=t :description_explanation, :scope => [:politwoops, :groups] %></p>
  </div>

  <% if @current_user.is_admin == 1 %>
  <div class="field">
    <%= f.label t(:sponsor_label, :scope => [:politwoops, :groups]) %>:<br />
    <%= f.text_area :sponsor %>
	<p class="explanation"><%=t :sponsor_explanation, :scope => [:politwoops, :groups] %></p>
  </div>
  <div class="field">
    <%= f.label t(:flag_label, :scope => [:politwoops, :groups]) %>:<br />
    <%= select(:group, :flag, Dir.glob("public/images/flags/*.png").collect { |p| [File.basename(p, '.png'), File.basename(p, '.png')] }, {:include_blank => true}, :class => 'chzn-select' )%>
  </div>  
  <div class="field">
    <%= f.label t(:base_url_label, :scope => [:politwoops, :groups]) %>:<br />
    <%= f.text_field :base_url %><br />
    <%= f.check_box :is_domain %><%= t(:domain_label, :scope => [:politwoops, :groups]) %>
  </div>
  <% end %>
  
<% if !@group.id.nil? %>
  <%= f.label t(:politicians_label, :scope => [:politwoops, :groups]) %>:<br />
	<p class="explanation"><%=t :politicians_explanation, :scope => [:politwoops, :groups] %></p>
  <% for politician in Politician.order(:user_name).all %>
  <div>
    <%= check_box_tag "group[politician_ids][]", politician.id, @group.politicians.include?(politician) %>
    <%= politician.user_name %>
  </div>
  <% end %>
<% end %>
  <div class="actions">
    <%= f.submit %>
  </div>  
<% end %>

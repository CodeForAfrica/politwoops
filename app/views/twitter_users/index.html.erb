<%= form_tag('/politicians/search', :method => "get") do %>
  <%= label_tag(:q, t(:search_label, :scope => [:politwoops, :groups_politicians])) %>
  <%= text_field_tag(:q, params[:q]) %>
  <%= submit_tag(t(:search, :scope => [:politwoops])) %>
<% end %>

<%
num_users = @twitter_users.length
if params.has_key?(:q) and (num_users > 0)
  @twitter_users.each do |twitter_user| %>
    <%= render :partial => "twitter_user", :locals => { :twitter_user => twitter_user } %>
<%
  end
elsif params.has_key?(:q)
%>
  <%=t :no_users_found, :scope => [:politwoops, :groups_politicians] %>
<% end %>
<h1><%=t :index_heading, :scope => [:politwoops, :politicians] %></h1>

<table>
  <tr>
    <th><%=t :name_label, :scope => [:politwoops, :politicians] %></th>
    <% if @current_user && @current_user.is_admin == 1 %>
    <th></th>
    <th></th>
    <th></th>
    <% end %>
  </tr>

<% @politicians.each do |politician| %>
  <tr>
    <td><%= politician.user_name %></td>
    <% if @current_user && @current_user.is_admin == 1 %>
    <td><%= link_to t(:show, :scope => [:politwoops]), sprintf('/user/%s', politician.user_name) %></td>
    <td><%= link_to t(:edit, :scope => [:politwoops]), edit_politician_path(politician) %></td>
    <td><%= link_to t(:destroy, :scope => [:politwoops]), politician, :confirm => t(:sure, :scope => [:politwoops]), :method => :delete %></td>
    <% end %>
  </tr>
<% end %>
</table>

<br />

<%= link_to t(:add_heading, :scope => [:politwoops, :politicians]), new_politician_path %>

<div id="tweet-<%= tweet.id %>" class="tweet">
  <a href="/user/<%= tweet.politician.user_name %>">
    <img src="http://img.tweetimag.es/i/<%= tweet.politician.user_name %>_b" alt="<%= tweet.politician.user_name %>" width"73" height="73" />
  </a>
  <div class="content">
    <div class="tweet-content">
    <a href="http://twitter.com/<%= tweet.politician.user_name %>"><%= tweet.politician.user_name %></a>
	<% if !tweet.politician.nil? %>
	(<a href="/party/<%= tweet.politician.party.name %>"><%= tweet.politician.party.name %></a>)
	<% end %>
	: <%= auto_link(tweet.content) %>
    </div>
    <div class="byline">
		<% source = tweet.details["source"].to_s %>
	      <a href="/tweet/<%= tweet.id %>"><%= time_ago_in_words(tweet.modified) %></a> geleden verwijderd via <%= source.html_safe %>
    </div>
    <div class="clear">
    </div>
  </div>
  <div class="actions">
    <a href="http://twitter.com/share?text=<%= CGI.escape('@' + tweet.user_name + ' ') %>&url=http://politwoops.nl/tweet/<%= tweet.id %>&via=politwoops" class="reply" target="_blank">reply</a>
    <a href="http://twitter.com/share?text=<%= CGI.escape('RT @' + tweet.user_name + ' ' + tweet.content) %>&url=http://politwoops.nl/tweet/<%= tweet.id %>&via=politwoops" class="retweet" target="_blank">retweet</a>
  </div>
  <div class="clear">
  </div>
</div>
